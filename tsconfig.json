{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "es2015", "es2017"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": true, // JavaScript 타입 체크 활성화
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "types": ["jest", "node"],
    "moduleResolution": "Node",
    "esModuleInterop": true
  },
  "include": ["src"]
}
